<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.filecmpr.controllers.Menu"
            stylesheets="@../styles/appTheme.css"
            prefWidth="1100" prefHeight="650"
            style="-fx-background-color: #F8FAFD;">

   <!-- TOPBAR -->
   <top>
      <AnchorPane prefHeight="55"
                  style="-fx-background-color: linear-gradient(to right, #006FF7, #6DAEF9);
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">
         <children>
            <Label text="Panel Principal"
                   layoutX="24" layoutY="15"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: 700;"/>
         </children>
      </AnchorPane>
   </top>

   <!-- SIDEBAR -->
   <left>
      <VBox prefWidth="220" spacing="8"
            style="-fx-background-color: #E9F0FB;
                     -fx-border-width: 0 1 0 0;
                     -fx-border-color: #D0DAEB;">
         <padding><Insets top="20" left="10" right="10" bottom="10"/></padding>

         <!-- Configuración -->
         <Button text="Configuración"
                 onAction="#showConfig"
                 prefHeight="40"
                 styleClass="sidebar-button">
            <graphic>
               <FontIcon iconLiteral="fa-cog" iconSize="18" iconColor="#006FF7"/>
            </graphic>
         </Button>

         <!-- Archivos -->
         <Button text="Ver Archivos"
                 onAction="#showView"
                 prefHeight="40"
                 styleClass="sidebar-button">
            <graphic>
               <FontIcon iconLiteral="fa-folder-open" iconSize="18" iconColor="#006FF7"/>
            </graphic>
         </Button>

         <!-- Estadísticas -->
         <Button text="Estadísticas"
                 onAction="#showStats"
                 prefHeight="40"
                 styleClass="sidebar-button">
            <graphic>
               <FontIcon iconLiteral="fa-line-chart" iconSize="18" iconColor="#006FF7"/>
            </graphic>
         </Button>

         <!-- Diagrama del Sistema -->
         <Button text="Diagrama del Sistema"
                 onAction="#showDiagram"
                 prefHeight="40"
                 styleClass="sidebar-button">
            <graphic>
               <FontIcon iconLiteral="fa-sitemap" iconSize="18" iconColor="#006FF7"/>
            </graphic>
         </Button>
      </VBox>
   </left>

   <!-- CONTENIDO CENTRAL -->
   <center>
      <AnchorPane fx:id="mainContent"
                  style="-fx-background-color: white;
                           -fx-background-radius: 16;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 6);
                           -fx-padding: 15;"
                  BorderPane.alignment="CENTER"
                  AnchorPane.topAnchor="15.0" AnchorPane.bottomAnchor="15.0"
                  AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
      </AnchorPane>
   </center>

</BorderPane>
