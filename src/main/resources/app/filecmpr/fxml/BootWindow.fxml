<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.filecmpr.controllers.Boot"
            prefWidth="700" prefHeight="450"
            stylesheets="@../styles/appTheme.css"
            styleClass="boot-bg">

   <children>
      <StackPane AnchorPane.topAnchor="0.0"
                 AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0"
                 alignment="CENTER">

         <children>
            <VBox spacing="18" alignment="CENTER"
                  styleClass="boot-card">

               <!-- Logo -->
               <ImageView fx:id="appLogo"
                          fitWidth="100" fitHeight="100"
                          pickOnBounds="true" preserveRatio="true">
                  <effect>
                     <DropShadow radius="20" offsetY="2" color="rgba(0,0,0,0.18)"/>
                  </effect>
               </ImageView>

               <!-- Título -->
               <Label fx:id="bootTitle" text="FileCMPR" styleClass="boot-title" opacity="0.0"/>
               <!-- Subtítulo -->
               <Label fx:id="bootSubtitle" text="Compresión y encriptación de archivos optimizada" styleClass="boot-subtitle" opacity="0.0"/>

               <!-- Botón continuar -->
               <Button text="Continuar" onAction="#handleContinue" styleClass="button main"/>
            </VBox>
         </children>
      </StackPane>

      <!-- Firma inferior -->
      <Label text="By: Axel Alvarado"
             AnchorPane.bottomAnchor="15.0"
             AnchorPane.leftAnchor="0.0"
             AnchorPane.rightAnchor="0.0"
             alignment="CENTER"
             style="-fx-text-fill: #8A96A8; -fx-font-size: 11px; -fx-font-weight: 400;"/>
   </children>
</AnchorPane>
