<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.filecmpr.controllers.ViewFiles"
            stylesheets="@../styles/appTheme.css"
            style="-fx-background-color: #F8FAFD;">

   <!-- TOP BAR -->
   <top>
      <AnchorPane prefHeight="45"
                  style="-fx-background-color: linear-gradient(to right, #006FF7, #6DAEF9);
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                  BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" layoutX="18" layoutY="8" spacing="10">
               <children>
                  <FontIcon iconLiteral="fa-folder-open" iconSize="20" iconColor="white"/>
                  <Label text="View Files"
                         style="-fx-text-fill: white; -fx-font-size: 17px; -fx-font-weight: bold;"/>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </top>

   <!-- MAIN CONTENT -->
   <center>
      <VBox alignment="TOP_CENTER" spacing="20">
         <padding>
            <Insets top="25" left="25" right="25" bottom="25"/>
         </padding>
         <children>

            <!-- CARD PRINCIPAL -->
            <VBox spacing="18" style="-fx-background-color: white; -fx-background-radius: 12;
                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 4);">
               <padding><Insets top="20" left="25" right="25" bottom="25"/></padding>
               <children>

                  <!-- Encabezado -->
                  <HBox spacing="10" alignment="CENTER_LEFT">
                     <FontIcon iconLiteral="fa-table" iconSize="16" iconColor="#006FF7"/>
                     <Label text="Archivos Originales y Procesados"
                            style="-fx-font-size: 15px; -fx-font-weight: 700; -fx-text-fill: #1E2432;"/>
                  </HBox>

                  <Separator/>

                  <!-- SPLIT VIEW para las dos tablas -->
                  <SplitPane dividerPositions="0.5" style="-fx-background-color: transparent;">
                     <items>

                        <!-- Tabla de archivos originales -->
                        <VBox spacing="10" style="-fx-background-color: #F8FAFD; -fx-background-radius: 10;">
                           <Label text="Archivos Originales"
                                  style="-fx-font-weight: bold; -fx-text-fill: #006FF7;"/>
                           <TableView fx:id="originalFilesTable" prefHeight="400"
                                      style="-fx-background-radius: 10;">
                              <columns>
                                 <TableColumn fx:id="nameColOriginal" text="Nombre" prefWidth="180"/>
                                 <TableColumn fx:id="sizeColOriginal" text="Tamaño (KB)" prefWidth="120"/>
                                 <TableColumn fx:id="typeColOriginal" text="Tipo" prefWidth="80"/>
                                 <TableColumn fx:id="dateColOriginal" text="Última Modificación" prefWidth="180"/>
                              </columns>
                           </TableView>
                        </VBox>

                        <!-- Tabla de archivos procesados -->
                        <VBox spacing="10" style="-fx-background-color: #F8FAFD; -fx-background-radius: 10;">
                           <Label text="Archivos Procesados"
                                  style="-fx-font-weight: bold; -fx-text-fill: #006FF7;"/>
                           <TableView fx:id="processedFilesTable" prefHeight="400"
                                      style="-fx-background-radius: 10;">
                              <columns>
                                 <TableColumn fx:id="nameColProcessed" text="Nombre" prefWidth="180"/>
                                 <TableColumn fx:id="sizeColProcessed" text="Tamaño (KB)" prefWidth="120"/>
                                 <TableColumn fx:id="typeColProcessed" text="Tipo" prefWidth="80"/>
                                 <TableColumn fx:id="dateColProcessed" text="Última Modificación" prefWidth="180"/>
                              </columns>
                           </TableView>
                        </VBox>

                     </items>
                  </SplitPane>

               </children>
            </VBox>

         </children>
      </VBox>
   </center>

   <!-- BOTTOM BAR -->
   <bottom>
      <AnchorPane prefHeight="30"
                  style="-fx-background-color: #E9F0FB;
                           -fx-border-color: #D0DAEB transparent transparent transparent;"
                  BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="355" layoutY="8" text="AA (2025)."
                   style="-fx-text-fill: #8A96A8; -fx-font-style: italic; -fx-font-size: 11px;"/>
         </children>
      </AnchorPane>
   </bottom>

</BorderPane>
