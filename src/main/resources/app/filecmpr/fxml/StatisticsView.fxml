<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.filecmpr.controllers.Statistics"
            stylesheets="@../styles/appTheme.css"
            style="-fx-background-color: #F8FAFD;">

   <!-- TOP BAR -->
   <top>
      <AnchorPane prefHeight="45"
                  style="-fx-background-color: linear-gradient(to right, #006FF7, #6DAEF9);
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                  BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" layoutX="18" layoutY="8" spacing="10">
               <children>
                  <FontIcon iconLiteral="fa-line-chart" iconSize="20" iconColor="white"/>
                  <Label text="Statistics"
                         style="-fx-text-fill: white; -fx-font-size: 17px; -fx-font-weight: bold;"/>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </top>

   <!-- MAIN CONTENT -->
   <center>
      <VBox alignment="TOP_CENTER" spacing="20">
         <padding>
            <Insets top="25" left="25" right="25" bottom="25"/>
         </padding>
         <children>

            <!-- Card principal -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 12;
                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 4);">
               <padding><Insets top="20" left="25" right="25" bottom="25"/></padding>
               <children>

                  <HBox spacing="10" alignment="CENTER_LEFT">
                     <FontIcon iconLiteral="fa-bar-chart" iconSize="16" iconColor="#006FF7"/>
                     <Label text="Resumen de Estadísticas"
                            style="-fx-font-size: 15px; -fx-font-weight: 700; -fx-text-fill: #1E2432;"/>
                  </HBox>

                  <Label fx:id="lblSummary"
                         style="-fx-text-fill: #64748B; -fx-font-size: 13px; -fx-padding: 5 0 10 0;"/>

                  <HBox spacing="25" alignment="CENTER">
                     <!-- Gráfica de barras -->
                     <BarChart fx:id="sizeChart"
                               prefWidth="380" prefHeight="300"
                               styleClass="modern-chart">
                        <xAxis>
                           <CategoryAxis label="Archivo"/>
                        </xAxis>
                        <yAxis>
                           <NumberAxis label="Tamaño (KB)"/>
                        </yAxis>
                     </BarChart>

                     <!-- Gráfica de pastel -->
                     <PieChart fx:id="ratioChart"
                               prefWidth="300" prefHeight="300"
                               styleClass="modern-chart"/>
                  </HBox>

               </children>
            </VBox>
         </children>
      </VBox>
   </center>

   <!-- BOTTOM BAR -->
   <bottom>
      <AnchorPane prefHeight="30"
                  style="-fx-background-color: #E9F0FB;
                           -fx-border-color: #D0DAEB transparent transparent transparent;"
                  BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="355" layoutY="8" text="AA (2025)."
                   style="-fx-text-fill: #8A96A8; -fx-font-style: italic; -fx-font-size: 11px;"/>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
